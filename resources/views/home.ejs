<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
      
        <div class="w-1/2"   >
            <img src="/img/pngegg.png" alt="Big-pizza">
        </div>
        <div class="w-1/2 ml-40">
            <!-- <h2 class="text-lg"><em>Hazlenut <br> Cafe</em></h2> -->
         <h1 class="tagline font-bold">Hazlenut Cafe..</h1>
            <h3 class="tagline2 text-3xl md:text-5xl font-bold">A premium and authentic food centre!</h3>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
        </div>
      
