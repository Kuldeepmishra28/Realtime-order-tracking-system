</section>

<div>
    <div class="step-container">

        <h1 class="heading text-5xl font-bold mb-8 text-center">How it <span>works</span></h1>
    
        <section class="steps">
    
            <div class="box">
                <img class="boximg" src="img/step-1.jpg" alt="">
                <h3>Choose favorite food</h3>
            </div>
            <div class="box">
                <img class="boximg" src="img/step-2.jpg" alt="">
                <h3>Free & fast delivery</h3>
            </div>
            <div class="box">
                <img class="boximg" src="img/step-3.jpg" alt="">
                <h3 >Easy payments methods</h3>
            </div>
            <div class="box">
                <img class="boximg"src="img/step-4.jpg" alt="">
                <h3> Finally, enjoy your food</h3>
            </div>
        
        </section>
    
    </div>
</div>

<section class="menu container mx-auto py-8">
    <h1 class="text-5xl font-bold mt-6 mb-8 text-center">Our dishes..</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 cols-gap-12 row-gap-12" >
       <% pizzas.forEach((pizza) => { %>
            <div class="">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="pizza">
                <div class="text-center">              
                    <h2 class="mb-4 text-lg"><%= pizza.name %></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">₹<%= pizza.price %></span>
                        <button data-pizza="<%= JSON.stringify(pizza)%>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>   
                </div>
             </div>
       <% }) %>
       
         
    </div> 

</section>


